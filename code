# ESPHome Configuration for Renogy Wanderer 30A Charge Controller

# ESPHome Core Configuration
esphome:
  name: renogy-charge-controller  # Customize this name for your device
  platform: ESP32
  board: esp32dev

# WiFi Configuration
wifi:
  ssid: "YOUR_WIFI_SSID"  # Replace with your WiFi network name
  password: "YOUR_WIFI_PASSWORD"  # Replace with your WiFi password
  
  # Optional: Static IP Configuration (recommended for stable connections)
  manual_ip:
    static_ip: 192.168.x.x  # Replace x with a unique IP in your network
    gateway: 192.168.x.x    # Typically your router's IP
    subnet: 255.255.255.0

# Fallback Hotspot (Captive Portal) 
# Activates if WiFi connection fails, allowing device configuration
ap:
  ssid: "Renogy Charge Controller Hotspot"
  password: "config-portal-password"

# Logging Configuration
logger:

# Home Assistant API Integration
api:

# Over-the-Air (OTA) Update Configuration
ota:
  platform: esphome
  password: "secure_ota_password"  # Replace with a strong, unique password

# UART (Universal Asynchronous Receiver/Transmitter) Configuration for Modbus
uart:
  id: mod_uart
  tx_pin: GPIO4   # Transmit pin - adjust based on your specific ESP32 board
  rx_pin: GPIO16  # Receive pin - adjust based on your specific ESP32 board
  baud_rate: 9600
  stop_bits: 1
  data_bits: 8
  parity: NONE

# Modbus Configuration
modbus:
  id: mod_bus
  uart_id: mod_uart

# Sensor Configurations
# Detailed Modbus register readings for various charge controller parameters
sensor:
  # Battery Sensors
  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Battery Capacity"
    register_type: holding
    address: 0x100
    value_type: U_WORD
    unit_of_measurement: "%"
    accuracy_decimals: 0

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Battery Voltage"
    register_type: holding
    address: 0x101
    value_type: U_WORD
    unit_of_measurement: "V"
    accuracy_decimals: 1
    filters:
      - multiply: 0.1

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Battery Charge Current"
    register_type: holding
    address: 0x102
    value_type: U_WORD
    unit_of_measurement: "A"
    accuracy_decimals: 1
    filters:
      - multiply: 0.1

  # Temperature Sensors
  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Controller Temperature"
    register_type: holding
    address: 0x103
    value_type: S_WORD
    unit_of_measurement: "°C"
    accuracy_decimals: 0
    filters:
      - lambda: return (static_cast<int16_t>(x) >> 8);

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Battery Temperature"
    register_type: holding
    address: 0x103
    value_type: S_WORD
    unit_of_measurement: "°C"
    accuracy_decimals: 0
    filters:
      - lambda: return (static_cast<int16_t>(x) & 0xFF);

  # Load Sensors
  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Load Voltage"
    register_type: holding
    address: 0x104
    value_type: U_WORD
    unit_of_measurement: "V"
    accuracy_decimals: 1
    filters:
      - multiply: 0.1

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Load Current"
    register_type: holding
    address: 0x105
    value_type: U_WORD
    unit_of_measurement: "A"
    accuracy_decimals: 2
    filters:
      - multiply: 0.01

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Load Power"
    register_type: holding
    address: 0x106
    value_type: U_WORD
    unit_of_measurement: "W"
    accuracy_decimals: 0

  # Solar Panel Sensors
  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Solar Panel Voltage"
    register_type: holding
    address: 0x107
    value_type: U_WORD
    unit_of_measurement: "V"
    accuracy_decimals: 1
    filters:
      - multiply: 0.1

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Solar Panel Current"
    register_type: holding
    address: 0x108
    value_type: U_WORD
    unit_of_measurement: "A"
    accuracy_decimals: 2
    filters:
      - multiply: 0.01

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Solar Panel Power"
    register_type: holding
    address: 0x109
    value_type: U_WORD
    unit_of_measurement: "W"
    accuracy_decimals: 0

  # Daily Statistics Sensors
  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Min Battery Voltage Today"
    register_type: holding
    address: 0x10B
    value_type: U_WORD
    unit_of_measurement: "V"
    accuracy_decimals: 1
    filters:
      - multiply: 0.1

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Max Battery Voltage Today"
    register_type: holding
    address: 0x10C
    value_type: U_WORD
    unit_of_measurement: "V"
    accuracy_decimals: 1
    filters:
      - multiply: 0.1

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Max Charge Current Today"
    register_type: holding
    address: 0x10D
    value_type: U_WORD
    unit_of_measurement: "A"
    accuracy_decimals: 1
    filters:
      - multiply: 0.1

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Max Discharge Current Today"
    register_type: holding
    address: 0x10E
    value_type: U_WORD
    unit_of_measurement: "A"
    accuracy_decimals: 1
    filters:
      - multiply: 0.1

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Max Charge Power Today"
    register_type: holding
    address: 0x10F
    value_type: U_WORD
    unit_of_measurement: "W"
    accuracy_decimals: 0

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Max Discharge Power Today"
    register_type: holding
    address: 0x110
    value_type: U_WORD
    unit_of_measurement: "W"
    accuracy_decimals: 0

  # Accumulated Energy Sensors
  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Charge Amp Hours Today"
    register_type: holding
    address: 0x111
    value_type: U_WORD
    unit_of_measurement: "Ah"
    accuracy_decimals: 0

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Discharge Amp Hours Today"
    register_type: holding
    address: 0x112
    value_type: U_WORD
    unit_of_measurement: "Ah"
    accuracy_decimals: 0

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Charge Watt Hours Today"
    register_type: holding
    address: 0x113
    value_type: U_WORD
    unit_of_measurement: "Wh"
    accuracy_decimals: 0

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Discharge Watt Hours Today"
    register_type: holding
    address: 0x114
    value_type: U_WORD
    unit_of_measurement: "Wh"
    accuracy_decimals: 0

  # Additional Operational Sensors
  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Controller Uptime"
    register_type: holding
    address: 0x115
    value_type: U_WORD
    unit_of_measurement: "days"
    accuracy_decimals: 0

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Total Battery Over-charges"
    register_type: holding
    address: 0x116
    value_type: U_WORD
    unit_of_measurement: "count"
    accuracy_decimals: 0

  - platform: modbus_controller
    modbus_controller_id: renogy_controller
    name: "Total Battery Full Charges"
    register_type: holding
    address: 0x117
    value_type: U_WORD
    unit_of_measurement: "count"
    accuracy_decimals: 0

# Modbus Controller Configuration
modbus_controller:
  id: renogy_controller
  modbus_id: mod_bus
  address: 0x01  # Typical Modbus slave address for solar charge controllers
  update_interval: 10s  # Frequency of data updates
